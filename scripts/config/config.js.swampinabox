			path: '/',

			// set cookies secure; false for http (local) install
			//
			secure: true
		},

		// options flags
		//
		options: {
			assessments: {
				allow_multiple_tool_selection: true,
				allow_viewing_zero_weaknesses: true
			},
		}
	};
});

