], function() {
	return {

		// web services
		//
		servers: {
			web: 'https://SED_HOSTNAME/swamp-web-server/public'
		},

		// cookie for storing user session
		//
		cookie: {
			'name': "swampuuid",

			// the major domain to communicate across; null for default
